<!DOCTYPE html>
<html>
  <head>
    <title>WeddingClothes</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <script src="https://code.jquery.com/jquery-2.2.4.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
    <body>
    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>" role="alert"><%= value %></div>
    <% end %>

    <nav class="navbar navbar-default navbar-fixed-top navbar-transparent">
      <div class="container">
        <%= link_to root_path do %>
          <span><%= image_tag "logo.png", class: "navbar-brand" %></span>
        <% end %>
        <ul class="nav navbar-nav navbar-right">
          <% if logged_in? %>
          <li>
            <%= link_to '写真投稿',new_topic_path,class: 'btn btn-block btn-white' %>
　　　　　　　
          </li>
          <li>
            <%= link_to '写真投稿一覧',topics_path,class: 'btn btn-block btn-white' %>

          </li>
          <li>
            <%= link_to 'ログアウト',logout_path, method: :delete,class: 'btn btn-block btn-white' %>
          </li>
           <% else %>
          <li>
            <%= link_to '新規ユーザー登録', new_user_path, class: 'btn btn-block btn-white' %>

          </li>
          <li>
            <%= link_to 'ログイン',login_path,class: 'btn btn-block btn-white' %>

          </li>
　　　　  <% end %>
        </ul>

      </div>
    </nav>

    <%= yield %>

    <script>
      $(function(){
         $(".alert").fadeOut(5000);
      });
    </script>
  </body>
</html>
