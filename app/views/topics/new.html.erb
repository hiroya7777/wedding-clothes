<div class="topic-new-wrapper">
  <div class="container">
    <div class="row">
      <div class= "col-md-6 col-md-offset-3">
        <h1 class= "text-center">コーディネート投稿</h1>
          <%= form_for @topic  do |f| %>
          <div class= "form-group" %>
            <%=f.label :コーディネート写真 %>
            <%=f.file_field :image %>
          </div>
          <div class="form-group" %>
            <%= f.label :コーディネート詳細 %>
            <%= f.text_area :description,class: 'form-control' %>
          </div>


          <div class="form-group">
            <%= f.label :skill_list, 'タグをカンマ区切りで入力' %><br/>
            <%= text_field_tag 'topic[skill_list]', @topic.skill_list.join(',') %>
         </div>

          <%= f.submit '投稿', class: 'btn btn-black btn-block' %>

          <% end %>
         </div>
       </div>
     </div>
   </div>
