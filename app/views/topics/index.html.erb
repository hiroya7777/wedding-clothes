<div class="topic-index-wrapper">
  <div class="container">
    <% @topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
              <%= image_tag topic.image.url, id: :image_prev if topic.image? %>
          ã€€<p class="topic-text">
              <%= topic.description %>
              <%= topic.skill_list %>

            <% if Like.find_by(user_id: current_user.id, topic_id: topic.id) %>
              <%= link_to("/likes/#{topic.id}/destroy", {method: "topic"}) do %>
              <% end %>
            <% end %>
            <%= link_to(likes_path(topic_id: topic.id), {method: :post}) do %>
              <%= image_tag 'heart-black.png', class: 'topic-index-icon' %>
            <% end %>
            <%= topic.likes.count %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
