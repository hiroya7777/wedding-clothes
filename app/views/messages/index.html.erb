<div class="message-new-wrapper">
  <div class="container">
    <div class="row">
      <div class= "col-md-6 col-md-offset-3">
        <h1 class= "text-center">Contact form</h1>
          <%= simple_form_for(@message, url: { action: :confirm }) do |f| %>
            <div class= "form-group">
              <%= f.input :name, label: "名前", placeholder: "20文字以内"  %>
            </div>
            <div class="form-group">
              <%= f.input :email, label: "Email", placeholder: "30文字以内" %>
            </div>
            <div class="form-group">
              <%= f.input :content, as: :text, label: "内容", placeholder: "200文字以内" %>
            </div>
            <div class="form-group">
              <%= f.button :submit, "確認画面へ", :class => "btn-primary" %>
            </div>
          <% end %>
      </div>
    </div>
  </div>
</div>
